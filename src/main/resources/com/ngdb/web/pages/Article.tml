			<form class="form-horizontal">
				<fieldset>
					<legend>Add a comment</legend>
					<textarea rows="6" id="textarea" class="input-xxlarge"></textarea>
				</fieldset>
				<button class="btn btn-primary" style="margin-top:10px" type="submit">Submit</button>
			</form>
		</div>
	</div>
</t:layout>