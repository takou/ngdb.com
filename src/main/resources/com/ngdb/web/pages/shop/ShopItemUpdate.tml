<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<div class="page-header">
		<t:if test="shopItem">
			<h1>Sell ${shopItem.article.title}</h1>
			<p:else>
				<h1>Sell ${article.title}</h1>
			</p:else>
		</t:if>
	</div>
	<div class="row">
		<div class="span12">
			<t:form t:id="shopItemForm" id="shopItemForm" class="form-horizontal">
				<t:errors />
				<div class="control-group">
					<fieldset>
						<div class="control-group">
							<t:label for="price" class="control-label">Price</t:label>
							<div class="controls">
								<t:textfield value="price" t:id="price" />
								<t:select style="max-width:50px" value="currency" model="currencies" t:id="currency" />
							</div>
						</div>
						<div class="control-group">
							<t:label for="state" class="control-label">State</t:label>
							<div class="controls">
								<t:select value="state" model="states" t:id="state" />
							</div>
						</div>
						<div class="control-group">
							<t:label for="details" class="control-label">Details</t:label>
							<div class="controls">
								<t:textarea style="width:100%" rows="6" value="details" t:id="details" />
							</div>
						</div>
						<div class="control-group">
							<t:label for="mainPicture" class="control-label">Picture</t:label>
							<div class="controls">
								<input t:type="upload" t:id="mainPicture" t:value="mainPicture">upload file</input>
							</div>
						</div>
						<div class="form-actions">
							<button class="btn btn-primary" type="submit">Sell</button>
							<button class="btn">Cancel</button>
						</div>
					</fieldset>
				</div>
			</t:form>
		</div>
	</div>
</t:layout>