<span xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<t:if test="asButton">
		<t:actionLink t:id="soldButton" class="btn btn-success" context="shopItem" t:mixins="jquery/tooltip" title="Mark as sold">
			<i class="icon-ok icon-white" />
		</t:actionLink>
		<p:else>
			<t:actionLink t:id="sold" id="sold" context="shopItem">
				<i class="icon-ok"/> Mark as sold
			</t:actionLink>
		</p:else>
	</t:if>
</span>