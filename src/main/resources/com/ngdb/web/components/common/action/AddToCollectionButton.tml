<span xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<t:if test="asButton">
		<t:actionLink class="btn btn-primary" t:id="collection" context="article" t:mixins="jquery/tooltip" title="Add to your collection">
			<i class="icon-plus icon-white"></i>
		</t:actionLink>
		<p:else>
			<t:actionLink t:id="collectionLink" context="article" >
				Add to your collection
			</t:actionLink>
		</p:else>
	</t:if>
</span>